{
  "name": "microservice_calendar",
  "version": "0.0.0",
  "description": "This microservice is used for handle the calendar functions. All these functions manage the informations about the lessons and the material needed for each of them",
  "main": "index.js",
  "scripts": {
    "doc": "redoc-cli bundle -o ./sources/documentation/Microservice_Documentation.html ./sources/documentation/BookMicroservice.json",
    "build": "mkdirp ./sources/main/generated && protoc --ts_opt=esModuleInterop=true --ts_out=./sources/main/generated -I ./CalendarCommunication ./CalendarCommunication/*.proto && npx tsc",
    "start": "node sources/build/main/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q sources/build/main/index.js\"",
    "test": "protoc --ts_opt=esModuleInterop=true --ts_out=./sources/main/generated -I ./CalendarCommunication ./CalendarCommunication/*.proto && jest",
    "coverage": "protoc --ts_opt=esModuleInterop=true --ts_out=./sources/main/generated -I ./CalendarCommunication ./CalendarCommunication/*.proto && jest --coverage"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/google-protobuf": "^3.15.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "google-protobuf": "^3.21.2",
    "jest": "^29.5.0",
    "mssql": "^9.1.1",
    "object-hash": "^3.0.0",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/mssql": "^8.1.2",
    "@types/object-hash": "^3.0.2",
    "@types/supertest": "^2.0.12",
    "concurrently": "^8.0.1",
    "mkdirp": "^3.0.1",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
